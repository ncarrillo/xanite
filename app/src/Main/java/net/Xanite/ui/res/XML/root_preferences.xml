<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="General Settings"
        app:iconSpaceReserved="false">

        <ListPreference
            android:key="theme_preference"
            android:title="Theme"
            android:summary="Choose app theme"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"
            android:defaultValue="light" />

        <ListPreference
            android:key="language_preference"
            android:title="Language"
            android:summary="Choose app language"
            android:entries="@array/language_entries"
            android:entryValues="@array/language_values"
            android:defaultValue="en" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Emulator Settings"
        app:iconSpaceReserved="false">

        <Preference
            android:key="edit_overlay"
            android:title="Edit Overlay"
            android:summary="Customize game controller overlay" />

        <Preference
            android:key="control"
            android:title="Control"
            android:summary="Configure input controls" />

        <Preference
            android:key="gpu_driver"
            android:title="GPU Driver"
            android:summary="Manage GPU drivers" />

        <ListPreference
            android:key="graphics_api"
            android:title="@string/graphics_api"
            android:summary="@string/graphics_api_description"
            android:entries="@array/graphics_api_entries"
            android:entryValues="@array/graphics_api_values"
            android:defaultValue="vulkan" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="System Information"
        app:iconSpaceReserved="false">

        <Preference
            android:key="device_info"
            android:title="Device Info"
            android:summary="View device specifications" />

    </PreferenceCategory>

</PreferenceScreen>
          
